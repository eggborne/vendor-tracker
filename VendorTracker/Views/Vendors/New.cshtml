@{
  Layout = "_Layout";
}

<div class="message" id="vendors-message">Add vendor</div>
<form type="submit" action="/vendors">
  <div class="form-input-area"><label>Vendor name:</label><input type="text" name="vendorName"></div>
  <div class="form-input-area"><label>Vendor description:</label><textarea name="vendorDescription"></textarea></div>
  <div class="form-input-area"><label>Bread per month:</label><input type="number" name="vendorBreadPerMonth"></div>
  <div class="form-input-area"><label>Pastries per month:</label><input type="number" name="vendorPastriesPerMonth"></div>
  <div class="button-area">
    <button type="submit">Add</button>
  </div>  
</form>