@{
  Layout = "_Layout";
}
@using VendorTracker.Models

<div class="message" id="vendors-message">Current Vendors:</div>

 @if (Model.Count == 0)
  {
    <p>No vendors!</p>
  }
  <ul id="vendor-list">
    @foreach (Vendor vendor in Model)
    {
      <li class="vendor-card" id=@vendor.Id>
        <div class="vendor-name">
          <h3>@vendor.Name</h3>
        </div>
        <div class="vendor-description">
          @vendor.Description
        </div>
        <div class="vendor-bread">
          Phone: @vendor.Phone
        </div>
        <div class="vendor-pastries">
          Email: @vendor.Email
        </div>
        <button class="view-orders-button">View / Add Orders</button>
      </li>
    }
  </ul>

<a href="./vendors/new">
  <button>Add New Vendor</button>
</a>