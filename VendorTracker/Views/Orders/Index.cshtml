@{
  Layout = "_Layout";
}

@using VendorTracker.Models;
@model List<VendorTracker.Models.Order>;

<h1>Orders</h1>

@if (@Model.Count == 0)
{
  <h3>No orders!</h3>
} 
else
{
  <ul id="order-list" class="card-list">
    @foreach (Order order in Model)
    {
      <li class="card order-card">
        <div class="order-card-row"><div>Vendor:</div><div>@Html.DisplayFor(model => order.Vendor.Name)</div></div>
        <div class="order-card-row"><div>Order date:</div><div>@Html.DisplayFor(model => order.Date)</div></div>
        <div class="order-card-row"><div>Bread units:</div><div>@Html.DisplayFor(model => order.BreadAmount)</div></div>
        <div class="order-card-row"><div>Pastry units:</div><div>@Html.DisplayFor(model => order.PastryAmount)</div></div>
        <div class="order-card-row"><div>Total:</div><div>$@Html.DisplayFor(model => order.TotalPrice)</div></div>
        <div class="card-button-area">
        <div class="edit-buttons-area">
          <a href='@Url.Action("Edit", new { id = order.OrderId })'>
            <button class="yellow">Edit</button>
          </a>
          <a href='@Url.Action("Delete", new { id = order.OrderId })'>
            <button class="red">Delete</button>
          </a>
        </div>
      </div>
      </li>
    }
  </ul>
}

<a href='@Url.Action("Index", "Home")'>
  <button>Back to Home</button>
</a>