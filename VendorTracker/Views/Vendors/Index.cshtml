@{
  Layout = "_Layout";
}
@using VendorTracker.Models

<div class="message" id="vendors-message">Current Vendors:</div>

 @if (Model.Count == 0)
  {
    <p>No vendors!</p>
  }
  <ul>
    @foreach (Vendor vendor in Model)
    {
      <li class="vendor-card" id=@vendor.Id>
        <div>@vendor.Name</div>
        <div>@vendor.Description</div>
        <div>@vendor.BreadPerMonth</div>
        <div>@vendor.PastriesPerMonth</div>
      </li>
    }
  </ul>

<a href="./vendors/new">
  <button>Add New Vendor</button>
</a>